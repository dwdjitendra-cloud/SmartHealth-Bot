# Production Environment Variables
NODE_ENV=production

# Server Configuration
PORT=10000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/smarthealthbot?retryWrites=true&w=majority

# AI Model Service (Production)
AI_MODEL_URL=https://smarthealth-bot-ai-model.onrender.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# AI Model Configuration
AI_MODEL_URL=http://localhost:5000

# Email Configuration (for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://smart-health-bot.vercel.app

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/api/health

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=uploads/

# Session Configuration
SESSION_SECRET=your-session-secret-key-here